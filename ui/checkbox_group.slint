import { CheckboxButton } from "button.slint";
import { SelectionEntry } from "selection.slint";
import { Sizes } from "constants.slint";

export component CheckboxGroup inherits HorizontalLayout {
    in property <[SelectionEntry]> entries;
    in property <int> active_index;
    in property <int> checked_index;
    spacing: Sizes.group_gap;
    for entry[i] in entries: CheckboxButton {
        title: entry.title;
        active: i == active_index;
        checked: i == checked_index;
    }
}
